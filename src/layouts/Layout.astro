---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import { ViewTransitions } from 'astro:transitions'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>QuickEcomSite - $20 Pre-Built eCommerce Websites</title>
    <meta
      name="description"
      content="Launch your online store with QuickEcomSite's stunning pre-built eCommerce websites for just $20. Get 30 expert-picked products, seamless order automation, and 24/7 customer support to start selling fast!"
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body class="bg-white font-SpaceGrotesk">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
