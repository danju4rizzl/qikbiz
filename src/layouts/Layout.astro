---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import { ViewTransitions } from 'astro:transitions'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      Best Web Development Solutions for South African Businesses form R299
      monthly
    </title>

    <meta
      name="description"
      content="Best Web Development Solutions for South African Businesses form R299 monthly"
    />

    <!-- Open Graph Meta Tags -->
    <meta
      property="og:title"
      content="Affordable Web Development Solutions for South African Businesses form R299 monthly"
    />
    <meta
      property="og:description"
      content="Professional Web Development Solutions for South African Businesses form R299 monthly"
    />
    <meta property="og:image" content="/og-banner.png" />
    <meta property="og:url" content="https://deejaydev.work" />
    <meta property="og:type" content="website" />

    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body class="bg-white font-SpaceGrotesk">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
