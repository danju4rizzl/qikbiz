---
import Container from './Container.astro'
import Topic from './Topic.astro'
---

<Container>
  <div class="relative flex flex-col items-center md:flex-row">
    <Topic
      title="Contact"
      description="Connect with Us: Let's Discuss Taking your business online "
    />
  </div>

  <div
    class="relative flex flex-col items-center md:flex-row my-6 bg-zinc-100 rounded-[45px]"
  >
    <div class="row items-center py-12 px-4 md:px-20 md:w-8/12 md:py-10">
      <!-- TODO: Deejay fix this form,use it for leads -->

      <form action="#" class="space-y-8 md:w-full">
        <!-- Form Types -->
        <div class="flex">
          <div class="flex items-center me-4">
            <input
              id="inline-radio"
              type="radio"
              value="enquiry"
              name="inline-radio-group"
              class="w-4 h-4 text-lime bg-black border-black focus:ring-lime"
            />
            <label
              for="inline-radio"
              class="ms-2 text-base font-medium text-black">Enquiry</label
            >
          </div>
          <div class="flex items-center me-4 mx-8 md:mx-20">
            <input
              id="inline-2-radio"
              type="radio"
              value="quote"
              name="inline-radio-group"
              class="w-4 h-4 text-lime bg-black border-black focus:ring-lime"
            />
            <label
              for="inline-2-radio"
              class="ms-2 text-base font-medium text-black">Get a Quote</label
            >
          </div>
        </div>

        <!-- Contact name here -->
        <div>
          <label for="fName" class="block mb-2 text-base font-medium text-black"
            >Name</label
          >
          <input
            type="text"
            id="fName"
            class="block p-3 w-full text-base text-black bg-white rounded-lg border shadow-sm focus:ring-black focus:border-black"
            placeholder="Your Name"
            required
          />
        </div>

        <!-- Contact Busines name here -->
        <div>
          <label
            for="fBusinessName"
            class="block mb-2 text-base font-medium text-black"
          >
            Business name (if available)
          </label>
          <input
            type="text"
            id="fBusinessName"
            class="shadow-sm bg-white border text-black text-base rounded-lg focus:ring-black focus:border-black block w-full p-2.5"
            placeholder="Your Business"
          />
        </div>

        <!-- Contact phone number here -->

        <div>
          <label
            for="fPhone"
            class="block mb-2 text-base font-medium text-black"
            >Conact number</label
          >
          <input
            type="tel"
            id="fPhone"
            class="block p-3 w-full text-base text-black bg-white rounded-lg border shadow-sm focus:ring-black focus:border-black"
            placeholder="Your Phone Number"
            required
          />
        </div>
        <!-- Contact email address here-->
        <div>
          <label
            for="fEmail"
            class="block mb-2 text-base font-medium text-black">Email</label
          >
          <input
            type="email"
            id="fEmail"
            class="block p-3 w-full text-base text-black bg-white rounded-lg border shadow-sm focus:ring-black focus:border-black"
            placeholder="Your Email Address"
            required
          />
        </div>

        <!-- Contact message  here -->
        <div class="sm:col-span-2">
          <label
            for="message"
            class="block mb-2 text-base font-medium text-black dark:text-gray-400"
            >Message</label
          >
          <textarea
            id="message"
            rows="6"
            class="block p-2.5 w-full text-base text-black bg-white rounded-lg shadow-sm border focus:ring-black focus:border-black"
            placeholder="Message"></textarea>
        </div>
        <button
          type="submit"
          class="w-full py-5 bg-zinc-900 text-white hover:bg-zinc-800 hover:text-zinc-900 rounded-[14px] justify-center gap-2.5 inline-flex duration-300"
        >
          <div class="text-center text-white text-xl font-normal leading-7">
            Send Message
          </div>
        </button>
      </form>
    </div>
    <div class="hidden md:grid md:justify-items-end md:w-4/12 md:py-2">
      <img
        src="./clients/contact.svg"
        alt="contact form image for deejaydev"
        width="80%"
      />
    </div>
  </div>
</Container>
