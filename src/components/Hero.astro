---
import { pricingList } from '../utils/config'
import CtaButton from './CtaButton.astro'
import Container from './Container.astro'
---

<Container>
  <div class="flex flex-col-reverse items-center md:flex-row" id="hero">
    <div class="flex items-center py-5 w-full md:pb-20 md:pt-10">
      <div class="text-left space-y-3">
        <h1 class="text-5xl font-medium leading-none md:text-6xl">
          Ideal Small Business Website Solution for R{
            pricingList.LaunchPad.price
          } Month-to-Month
        </h1>
        <p class="mt-6 mb-8 text-xl font-normal leading-7 sm:mb-12">
          Signup for the LaunchPad package for just R{
            pricingList.LaunchPad.price
          } a month! Youâ€™ll get a 5-page website, web hosting, your own South African
          .co.za business domain, a business email, and monthly maintenance.
        </p>
        <CtaButton
          title={`Get Started for R${pricingList.LaunchPad.price} PM`}
          checkoutUrl={pricingList.LaunchPad.packageLink}
        />
      </div>
    </div>

    <div
      class="flex items-center justify-center py-5 md:w-full md:pb-20 md:pt-24"
    >
      <img src="/hero-image-1.svg" width="100%" alt="Hero" />
    </div>
  </div>

  <div class="flex-row items-center">
    <div class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-6">
      <div class="p-4 grayscale transition duration-200 hover:grayscale-0">
